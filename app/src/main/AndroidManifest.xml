<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aiocalculator">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIOCalculator">
        <activity android:name=".CurrencyConvertorActivity"></activity>
        <activity android:name=".LengthConvertorActivity" />
        <activity android:name=".AreaConvertorActivity" />
        <activity android:name=".VolumeConvertorActivity" />
        <activity android:name=".TimeConvertorActivity" />
        <activity android:name=".MassConvertorActivity" />
        <activity android:name=".EnergyConvertorActivity" />
        <activity android:name=".SpeedConvertorActivity" />
        <activity android:name=".DataConvertorActivity" />
        <activity android:name=".TempConActivity" />
        <activity android:name=".AgeCalActivity" />
        <activity android:name=".SimpleCalculatorActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>